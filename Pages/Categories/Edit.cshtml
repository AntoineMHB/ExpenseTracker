@page
@model ExpenseTracker.Pages.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2 class="mb-4">Edit Category</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryID" />
            <div class="form-group mb-2">
                <input asp-for="Category.UserID" class="form-control" type="hidden"/>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category.BudgetID" class="control-label">Budget Title</label>
                <select asp-for="Category.BudgetID" class="form-control" asp-items="ViewBag.BudgetID"></select>
                <span asp-validation-for="Category.BudgetID" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category.CategoryName" class="control-label">Category Name</label>
                <input asp-for="Category.CategoryName" class="form-control" />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Category.AllocatedAmount" class="control-label">Allocated Amount</label>
                <input asp-for="Category.AllocatedAmount" class="form-control" />
                <span asp-validation-for="Category.AllocatedAmount" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-3 ">
                <input type="submit" value="Save" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
