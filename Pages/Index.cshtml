@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
 <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
<style>
    * {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  font-family: "Poppins", sans-serif;
}
/*  HERO AND HEADER*/


.container {
  width: 1200px;
  max-width: 90%;
  margin-top: -40px;
  padding: 50px 0;
}
a{
  text-decoration: none;
}
nav {
  display: flex;
  justify-content: space-between;
}
nav a img{
  width: 100px;
}

nav ul {
  display: flex;
}

nav li {
  list-style: none;
  margin: 0 25px;
}
nav ul li a {
  color: hsl(243, 87%, 12%);
}
nav ul li a:hover{
  text-decoration: underline;
}
.hero {
  margin-top: -100px;
  display: flex;
  align-items: center;
  margin-bottom: -80px;
}

.hero section {
  flex: 1;
}
.hero-left h1 {
  font-weight: 600;
  font-size: 2.5rem;
  margin-bottom: 25px;
  color: #070439;
}

.hero-left p {
  font-weight: 600;
  line-height: 1.5;
  margin-bottom: 25px;
  color: #444444;
}

.hero-left {
  padding-right: 40px;
}
.hero-left a {
  padding: 15px 30px;
  background: #397ef6;
  color: #fff;
  font-weight: 600;
  border-radius: 4px;
  cursor: pointer;
  border: none;
  outline: none;
  transition: 0.3s all ease;
  border-radius: 20px;
}
.hero-left a:hover{
  background-color: #070439;
}
.right {
  padding-top: 50px;
}

.right img {
  width: 100%;
  max-width: 465px;
}


  nav li {
    list-style: none;
    margin: 0 8px 
  }

  .hero .left{
    flex-direction: column;  
    text-align: center; 
  }

  .hero .right {
    padding-bottom: 5rem; 
  }
}
/****************FEATURES *******************************/
.row {
  
  display: flex;
  flex-wrap: wrap;
}
.row p:first-child {
  width: 100%;
  text-align: center;
  font-size: 2.8em;
  margin: 0.6em 0;
  font-weight: 600;
  color: #070024;
}
.column {
  padding: 1em;
}
.card {
  padding: 3.1em 1.25em;
  text-align: center;
  background: linear-gradient(0deg, #397ef6 10px, transparent 10px);
  background-repeat: no-repeat;
  background-position: 0 0.62em;
  box-shadow: 0 0 2.5em rgba(0, 0, 0, 0.15);
  border-radius: 0.5em;
  transition: 0.5s;
  cursor: pointer;
}
.card .icon {
  font-size: 2.5em;
  height: 2em;
  width: 2em;
  margin: auto;
  background-color: #397ef6;
  display: grid;
  place-items: center;
  border-radius: 50%;
  color: #ffffff;
}
.icon:before {
  position: absolute;
  content: "";
  height: 1.5em;
  width: 1.5em;
  border: 0.12em solid #397ef6;
  border-radius: 50%;
  transition: 0.5s;
}
.card h3 {
  font-size: 1.3em;
  margin: 1em 0 1.4em 0;
  font-weight: 600;
  letter-spacing: 0.3px;
  color: #070024;
}
.card p {
  line-height: 2em;
  color: #625a71;
}
.card:hover {
  background-position: 0;
}
.card:hover .icon:before {
  height: 2.25em;
  width: 2.25em;
}

  .card {
    padding: 5em 2em;
  }
  .column {
    flex: 0 0 33.33%;
    max-width: 33.33%;
    padding: 0 1em;
  }
}
</style>

<div class="text-center">
    <body>
        <header class="container">
            <div class="hero">
                <section class="hero-left">
                    <h1>
                        Master your finances with precision. Visualize Your expenses seamlessly.

                    </h1>
                    <p>
                        Master Your Finances with Precision. Record, Categorize, and Visualize Your Expenses Seamlessly.
                    </p>

                    <a href="/Expenses/Index">Get Started</a>
                </section>

                <section class="right">
                    <img src="https://cdni.iconscout.com/illustration/premium/thumb/finance-app-6263527-5174759.png?f=webp" alt="Hero illustration" />
                </section>
            </div>
        </header>
        <section class="features">
            <div class="row">
                <p>Our Features</p>
            </div>
            <div class="row">
                <!-- Column One -->
                <div class="column">
                    <div class="card">
                        <div class="icon">
                            <i class="fa-solid fa-receipt"></i>
                        </div>
                        <h3>Record Expense</h3>
                        <p>
                            Effortlessly log your expenses with a user-friendly interface. Keep track of every transaction, ensuring a comprehensive record of your financial activities.
                            
                        </p>
                    </div>
                </div>
                <!-- Column Two -->
                <div class="column">
                    <div class="card">
                        <div class="icon">
                            <i class="fa-regular fa-folder"></i>
                        </div>
                        <h3>Categorize Expense</h3>
                        <p>
                            Organize your expenditures efficiently by categorizing them into distinct groups. Create custom categories to tailor the expense tracking experience to your specific needs.
                        </p>
                    </div>
                </div>
                <!-- Column Three -->
                <div class="column">
                    <div class="card">
                        <div class="icon">
                            <i class="fa-solid fa-chart-line"></i>
                        </div>
                        <h3>Generate Report</h3>
                        <p>
                            Gain valuable insights into your spending habits by generating detailed reports. Analyze your expenses over specified periods, identify trends, and make informed financial decisions.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </body>
</div>

