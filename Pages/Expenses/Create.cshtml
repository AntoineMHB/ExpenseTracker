@page
@model ExpenseTracker.Pages.Expenses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Expense Management</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["ErrorMessage"]
                </div>
            }
            <div class="form-group">
                <input asp-for="Expense.UserID" class ="form-control" asp-items="ViewBag.UserID" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Expense.BudgetID" class="control-label">Budget Title</label>
                <select asp-for="Expense.BudgetID" class ="form-control" asp-items="ViewBag.BudgetID"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Expense.CategoryID" class="control-label">Category Name</label>
                <select asp-for="Expense.CategoryID" class ="form-control" asp-items="ViewBag.CategoryID"></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Expense.Amount" class="control-label"></label>
                <input asp-for="Expense.Amount" class="form-control" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Expense.Description" class="control-label">Expense Title</label>
                <input asp-for="Expense.Description" class="form-control" />
                <span asp-validation-for="Expense.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Expense.Date" class="control-label"></label>
                <input asp-for="Expense.Date" class="form-control" />
                <span asp-validation-for="Expense.Date" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-3">
                <input type="submit" value="Create" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
